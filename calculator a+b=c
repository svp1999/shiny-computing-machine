#include<stdio.h>
addition();// function prototype
main()
{
    //core functionality
    //function call
    addition();
}
//function definition
addition()
{
    int a=0,b=0;
    printf("Enter 2 numbers :");
    scanf("%d%d",&a,&b);
    printf("\nThe sum is :%d", a+b);
    //main();
}


#include <stdio.h> 
  

int sum_of_digit(int n) 
{ 
    if (n == 0) 
       return 0; 
    return (n % 10 + sum_of_digit(n / 10)); 
} 
  
 
int main() 
{ 
    int num = 1234; 
    int result = sum_of_digit(num); 
    printf("Sum of digits in %d is %d\n", num, result); 
    return 0; 
} 
