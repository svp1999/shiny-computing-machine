#include<stdio.h>
int main(){
    /*local variable declaration*/
    int a,b;
    int c;
    /*actual initialization*/
    a=10;
    b=20;
    c=a+b;
    printf("value of a =%d,b=%d and c=%d\n",a,b,c);
    return 0;
}




